extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div

      
      h1 Welcome To My Portfolio Of Web Projects

      
      p.lead.text-light
        br
        | This portfolio was built using Node.Js and Express.Js. 
        br
        | It showcases the projects that I've built for the Treehouse Full Stack Javascript Techdegree.
    article.grid-container.portfolio-index
    
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3

    
      each project in projects 
        .cell
          a(href=`project/${project.id}`)
            img.thumbnail(src=`${project.image_urls[0]}`)
            h5= project.project_name
        
